<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="../fonts/icomoon/style.css">

    <link rel="stylesheet" href="../css/owl.carousel.min1.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../css/bootstrap.min1.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="../css/style-form.css">
    <link rel="stylesheet" href="../css/style-navbar.css">

    <title>G17</title>
    <script>
      function blockSpecialChar(e){
        var k;
        document.all ? k = e.keyCode : k = e.which;
        return ((k > 64 && k < 91) || (k > 96 && k < 123) || k == 8 || k == 32 || (k >= 48 && k <= 57));
        }
        function validateNumber(e) {
            const pattern = /^[0-9]$/;

            return pattern.test(e.key)
        }
        function validAlpha(e) {
          const pattern = /^[a-z]|[A-Z]$/;

          return pattern.test(e.key)
        }
    </script>
  </head>
  <body>
    <section id="header">
      <ul class="nav-bar">
          <li><a href="/api/home">Home</a></li>
          <li><a href="/logout">Log Out</a></li>
      </ul>
  </section>

  <div class="d-lg-flex half">
    <div class="bg "  style="background-image: url('../images/bgimage.jpg') ;"></div> 
 

    <div class="contents order-2 order-md-1">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7">
            <h3>Login to <strong>KBR</strong></h3>
            <p class="mb-4">Keyword based retrieval of judgements across the Indian Subcontinent</p>
            <form action="/api/upload" method="post">
              <div class="form-group first">
                <label for="username">Title</label>
                <input type="text" class="form-control" placeholder="Title" name="title" onkeypress="return blockSpecialChar(event)">
              </div>
              <div class="form-group last mb-3">
                <label for="password">Year</label>
                <input type="number" class="form-control" placeholder="Year" name="year"  onkeypress="return validateNumber(event)">
              </div>
              <div class="form-group last mb-3">
                <label for="password">Description</label>
                <textarea class="form-control" placeholder="Description" rows="10" name="description"  onkeypress="return blockSpecialChar(event)"></textarea>
              </div>
              <div class="form-group last mb-3">
                <label for="describe">Court</label>
                <input type="text" class="form-control" placeholder="Court" name="court" onkeypress="return validAlpha(event)" >
              </div>
              <div class="form-group last mb-3">
                <label for="judgments">Keyword</label>
                <input type="text" class="form-control" placeholder="Keyword" name="keyword" onkeypress="return validAlpha(event)" >
              </div>
              <div class="d-flex mb-5 align-items-center">
                </label>
              </div>

              <input type="submit" value="Submit" class="btn btn-block btn-primary">

            </form>
          </div>
        </div>
      </div>
    </div>

    
  </div>

    
  </body>

</html>